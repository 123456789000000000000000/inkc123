<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0E0E0"
            android:background="@drawable/curve_shap"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200sp"
                android:layout_height="150sp"
                android:layout_marginTop="10dp"
                android:id="@+id/images"
                android:background="@drawable/curve_shap"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:padding="8dp"
                android:background="#403f3d"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/puppyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="15dp"
                    android:text="My Puppy-1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/curve_shap"
                android:backgroundTint="#40C9A2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ownpuppy"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Afghan Hound "
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="top" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Register Number :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#787672"
                />

            <TextView
                android:id="@+id/registrationnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1997-0001-01/05"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#787672"
                android:layout_gravity="center_horizontal|center_vertical" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>