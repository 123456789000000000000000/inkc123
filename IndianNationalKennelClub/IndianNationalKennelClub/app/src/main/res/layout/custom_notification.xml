<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/notidate"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:background="#f2ebe9"
                android:textSize="20dp"
                android:textColor="#d6541c"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/notimonth"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#FAA916"
                android:gravity="center"
                android:textStyle="bold"
                android:text="OCT"
                android:textColor="@color/white"/>

        </LinearLayout>
        <TextView
            android:id="@+id/notimessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00072/2022 Registration number requested for Dam, Please approve the same"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#bfbbba"/>

</LinearLayout>